        // Function to animate counting numbers
        function animateCountingNumbers(targetElement, duration) {
        let start = 0;
        const target = parseInt(targetElement.innerText);
        const increment = Math.ceil(target / duration);
        let reached = false;
        function incrementCount() {
        start += increment;
        if (start >= target) {
        targetElement.innerText = target.toLocaleString();
        reached = true;
        } else {
        targetElement.innerText = start.toLocaleString();
        requestAnimationFrame(incrementCount);
        }
        }
        // Create an Intersection Observer
        const observer = new IntersectionObserver((entries) => {
        if (entries[0].isIntersecting && !reached) {
        requestAnimationFrame(incrementCount);
        observer.disconnect();
        }
        });
        // Observe the target element
        observer.observe(targetElement);
        }
        // Animate counting numbers on page load
        window.addEventListener('load', () => {
        const countElements = document.getElementsByClassName('count');
        const animationDuration = 3000; // Change this value to adjust the duration of the animation
        Array.from(countElements).forEach((element) => {
        animateCountingNumbers(element, animationDuration);
        });
        });
